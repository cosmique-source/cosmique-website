---
pagination:
  data: site.apps
  size: 1
  alias: app
permalink: "/apps/{{ app.slug }}/"
layout: base.njk
---

<div class="container">
  <header>
    <a href="{{ '/' | url }}">
      <img src="{{ '/assets/logo.svg' | url }}" alt="{{ site.site.title }}" class="logo">
    </a>
  </header>

  <main>
    <nav class="breadcrumb">
      <a href="{{ '/' | url }}">apps</a> / {{ app.name }}
    </nav>

    <article class="app-detail">
      <header class="app-header">
        {% if app.icon %}
        <img src="{{ ('/assets/punkt/' + app.icon) | url }}" alt="{{ app.name }} icon" class="app-icon">
        {% endif %}
        <div class="app-header-text">
          <h1 class="app-detail-title">{{ app.name }}</h1>
          <p class="app-detail-tagline">{{ app.description }}</p>
        </div>
      </header>

      {% if app.watchScreenshots %}
      <section class="app-screenshots app-screenshots-featured">
        <div class="screenshots-watch-grid">
          {% for screenshot in app.watchScreenshots %}
          <div class="screenshot-item screenshot-watch">
            <img src="{{ ('/assets/punkt/' + screenshot) | url }}" alt="{{ app.name }} on Apple Watch" loading="lazy">
          </div>
          {% endfor %}
        </div>
      </section>
      {% endif %}

      {% if app.iphoneScreenshots %}
      <section class="app-screenshots app-screenshots-companion">
        <h2 class="section-title">iPhone Companion App</h2>
        <p class="companion-description">Manage your feeds on iPhone. They sync instantly to your watch.</p>
        <div class="screenshots-row">
          {% for screenshot in app.iphoneScreenshots %}
          <div class="screenshot-item screenshot-phone">
            <img src="{{ ('/assets/punkt/' + screenshot) | url }}" alt="{{ app.name }} on iPhone" loading="lazy">
          </div>
          {% endfor %}
        </div>
      </section>
      {% endif %}

      <div class="app-detail-content">
        <section class="app-section">
          <h2 class="section-title">About</h2>
          <p class="app-detail-description">{{ app.fullDescription }}</p>
        </section>

        <section class="app-section">
          <h2 class="section-title">Features</h2>
          <ul class="feature-list">
            {% for feature in app.features %}
            <li>{{ feature }}</li>
            {% endfor %}
          </ul>
        </section>

        <section class="app-section">
          <h2 class="section-title">Platform</h2>
          <p class="platform-badge">{{ app.platform }}</p>
        </section>

        {% if app.link %}
        <section class="app-section">
          <a href="{{ app.link }}" class="app-link" target="_blank" rel="noopener">
            View on App Store →
          </a>
        </section>
        {% endif %}

        {% if app.slug == 'punkt' %}
        <section class="app-section app-links-row">
          <a href="{{ '/apps/punkt/support/' | url }}" class="app-link">
            Support →
          </a>
          <a href="{{ '/apps/punkt/privacy/' | url }}" class="app-link app-link-secondary">
            Privacy Policy →
          </a>
        </section>
        {% endif %}
      </div>

      <nav class="app-nav">
        <a href="{{ '/' | url }}" class="back-link">← Back to all apps</a>
      </nav>
    </article>
  </main>

  <footer>
    <div class="footer-content">
      <p>{{ site.site.title }}</p>
      <p><a href="mailto:hello@cosmique.io">hello@cosmique.io</a></p>
    </div>
  </footer>
</div>
