---
layout: base.njk
---

<div class="container">
  <header>
    <img src="/assets/logo.svg" alt="{{ site.site.title }}" class="logo">
    <p class="tagline">{{ site.site.description }}</p>
  </header>

  <main>
    <h1 class="section-title">Apps</h1>

    <div class="apps-grid">
      {% for app in site.apps %}
      <a href="/apps/{{ app.slug }}/" class="app-card-link">
        <article class="app-card">
          <div class="app-card-content">
            <h2 class="app-name">{{ app.name }}</h2>
            <p class="app-description">{{ app.description }}</p>
          </div>
        </article>
      </a>
      {% endfor %}
    </div>
  </main>

  <footer>
    <div class="footer-content">
      <p>{{ site.site.title }}</p>
    </div>
  </footer>
</div>
